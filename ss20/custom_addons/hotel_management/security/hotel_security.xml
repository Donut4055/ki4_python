<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_hotel_receptionist" model="res.groups">
        <field name="name">Hotel Receptionist</field>
        <field name="category_id" ref="base.module_category_services"/>
    </record>

    <record id="group_hotel_manager" model="res.groups">
        <field name="name">Hotel Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_hotel_receptionist'))]"/>
    </record>

    <record id="booking_receptionist_rule" model="ir.rule">
        <field name="name">Receptionist: Only Draft/Confirmed Bookings</field>
        <field name="model_id" ref="model_hotel_booking"/>
        <field name="domain_force">[('state', 'in', ['draft', 'confirmed'])]</field>
        <field name="groups" eval="[(4, ref('group_hotel_receptionist'))]"/>
    </record>

    <record id="booking_manager_rule" model="ir.rule">
        <field name="name">Manager: All Bookings</field>
        <field name="model_id" ref="model_hotel_booking"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_hotel_manager'))]"/>
    </record>
</odoo>
