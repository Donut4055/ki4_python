<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="finance_expense_employee_rule" model="ir.rule">
            <field name="name">Finance Expense: Employee - Own Records Only</field>
            <field name="model_id" ref="model_finance_expense"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_finance_employee'))]"/>
        </record>

        <record id="finance_expense_manager_rule" model="ir.rule">
            <field name="name">Finance Expense: Manager - All Records</field>
            <field name="model_id" ref="model_finance_expense"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_finance_manager'))]"/>
        </record>

        <record id="finance_expense_auditor_rule" model="ir.rule">
            <field name="name">Finance Expense: Auditor - All Records</field>
            <field name="model_id" ref="model_finance_expense"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_finance_auditor'))]"/>
        </record>
    </data>
</odoo>
